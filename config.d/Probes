*** Probes ***

+ FPing

binary = /usr/bin/fping


+ Curl

binary = /usr/bin/curl
offset = random
pings = 5
urlformat = http://%host%/


+ DNS

binary = /usr/bin/dig
offset = random
pings = 5


+ TCPPing

binary = /etc/smokeping/bin/tcpping # mandatory
forks = 5
offset = 50%
step = 300
#tcptraceroute = -e "sudo /bin/tcptraceroute"
timeout = 15


